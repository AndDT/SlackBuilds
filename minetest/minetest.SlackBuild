PRGNAM=minetest
VERSION=0.4.9
GAMEVER=0.4.9
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}
OPTIMIZE=${OPTIMIZE:-no} # It will be more stable without optimization
FREETYPE=${FREETYPE:-ON} # Prints lots of warnings, but works
NUMJOBS=${NUMJOBS:--j2}

#for i in minetest minetest_game; do
#  if [ ! -f $i-$VERSION.tar.gz ]; then
#    wget https://github.com/minetest/${i}/archive/$VERSION.tar.gz -O ./$i-$VERSION.tar.gz
#  fi
#done

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i486 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

if [ "$OPTIMIZE" != "no" ]; then
  OPTFLAG="-O2"
fi

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

set -e

if [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="$OPTFLAG -march=i486 -mtune=i686"
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="$OPTFLAG -march=i686 -mtune=i686"
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="$OPTFLAG -fPIC"
else
  SLKCFLAGS="$OPTFLAG"
fi

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION
tar zxvf $CWD/$PRGNAM-$VERSION.tar.gz
cd $PRGNAM-$VERSION

cd games
  tar zxvf $CWD/minetest_game-$GAMEVER.tar.gz || exit 1
  mv `echo minetest_game*` minetest_game
cd ..

chown -R root:root .
find . \
 \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 \) \
 -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
 -exec chmod 644 {} \;

#  -DVERSION_EXTRA=${VERSION} \
mkdir build && cd build
cmake .. \
  -DCMAKE_C_FLAGS:STRING="$SLKCFLAGS" \
  -DCMAKE_CXX_FLAGS:STRING="$SLKCFLAGS" \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DCUSTOM_DOCDIR=/usr/doc/${PRGNAM}-${VERSION} \
  -DCUSTOM_EXAMPLE_CONF_DIR=/usr/doc/${PRGNAM}-${VERSION} \
  -DENABLE_GETTEXT=ON \
  -DCUSTOM_MANDIR=/usr/man \
  -DENABLE_FREETYPE=${FREETYPE} \
  -DCMAKE_BUILD_TYPE=Release || exit 1
make $NUMJOBS || make || exit 1
make install DESTDIR=$PKG
cd ..

find $PKG -print0 | xargs -0 file | grep -e "executable" -e "shared object" | grep ELF \
  | cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null || true

find $PKG/usr/man -type f -exec gzip -9 {} \;
find $PKG -type f -name ".gitignore" -exec rm {} \;

cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}
